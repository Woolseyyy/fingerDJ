<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageButton
            android:id="@+id/setMainMusicBtn"
            android:background="#00000000"
            app:layout_widthPercent="6.1875%"
            app:layout_heightPercent="9%"
            android:scaleType="fitXY"
            android:src="@drawable/wave"
            app:layout_marginLeftPercent="18%"
            app:layout_marginTopPercent="85%"/>
    <!--主音频导入按钮-->

    <ImageButton
            android:id="@+id/setBackMusicBtn"
            android:background="#00000000"
            app:layout_widthPercent="6.1875%"
            app:layout_heightPercent="9%"
            android:scaleType="fitXY"
            android:src="@drawable/wave"
            app:layout_marginLeftPercent="33%"
            app:layout_marginTopPercent="85%" />
    <!--次音频导入按钮-->

    <ImageView
            android:src="@drawable/line"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:id="@+id/imageView"
            app:layout_marginLeftPercent="50%" />
    <!--中央分界线-->

    <android.support.percent.PercentRelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:layout_widthPercent="40%"
            app:layout_heightPercent="90%"
            app:layout_marginTopPercent="5%"
            app:layout_marginLeftPercent="57%">
        <!--分别为宽度百分比,高度百分比，上边缘和上边框边距百分比，左边框和左边缘百分比-->

        <ImageButton
                android:id="@+id/musicplayer"
                app:layout_heightPercent="79%"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:background="#00000000"
                android:src="@drawable/musicplayer"/>
        <!--专辑封面圆盘-->

        <SeekBar
                android:layout_centerHorizontal="true"
                android:id="@+id/SeekBar_track"
                android:layout_width="250dp"
                android:layout_height="20dp"
                android:max="100"
                android:progress="30"
                android:layout_below="@+id/musicplayer"
                android:layout_marginTop="15dp"/>
        <!--进度条，progress为初始进度设置-->
        <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/SeekBar_track">

            <ImageButton
                    android:id="@+id/play"
                    android:background="#00000000"
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/play"
                    android:layout_marginTop="10dp" />
            <!--播放键-->
            <ImageButton
                    android:id="@+id/pause"
                    android:visibility="gone"
                    android:background="#00000000"
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/pause"
                    android:layout_marginTop="10dp" />
            <!--暂停键-->

            <ImageButton
                    android:id="@+id/addrecord"
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                    android:background="#00000000"
                    android:scaleType="fitXY"
                    android:src="@drawable/addrecord"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"/>
            <!--添加节点-->
            <ImageButton
                    android:id="@+id/back"
                    android:background="#00000000"
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/back"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"/>
            <!--倒播-->
        </LinearLayout>

    </android.support.percent.PercentRelativeLayout>



    <SeekBar
            android:layout_centerVertical="true"
            android:id="@+id/SeekBar_mainVolume"
            android:progressDrawable="@drawable/seekbar"
            android:max="100"
            android:thumb="@drawable/thumb"
            android:progress="30"
            android:rotation="270"
            android:layout_width="280dp"
            android:layout_height="30dp"
            app:layout_marginTopPercent="43%"
            app:layout_marginLeftPercent="17%"/>

    <SeekBar
            android:layout_centerVertical="true"
            android:id="@+id/SeekBar_backVolume"
            android:progressDrawable="@drawable/seekbar"
            android:max="100"
            android:thumb="@drawable/thumb"
            android:progress="50"
            android:rotation="270"
            android:layout_width="280dp"
            android:layout_height="30dp"
            app:layout_marginTopPercent="43%"
            app:layout_marginLeftPercent="2%"/>

    <LinearLayout
            android:orientation="vertical"
            app:layout_marginTopPercent="20%"
            app:layout_marginLeftPercent="5%"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

        <ImageButton
                android:id="@+id/setEffectSound1"
                android:scaleType="fitXY"
                android:background="#00000000"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/snare"
        />

        <ImageButton
                android:id="@+id/setEffectSound2"
                android:scaleType="fitXY"
                android:background="#00000000"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/trombone"
                android:layout_marginTop="10dp"/>

        <ImageButton
                android:id="@+id/setEffectSound3"
                android:scaleType="fitXY"
                android:background="#00000000"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/xylophone"
                android:layout_marginTop="10dp"/>

        <ImageButton
                android:id="@+id/setEffectSound4"
                android:scaleType="fitXY"
                android:background="#00000000"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/guitar"
                android:layout_marginTop="10dp"/>
    </LinearLayout>
</android.support.percent.PercentRelativeLayout>